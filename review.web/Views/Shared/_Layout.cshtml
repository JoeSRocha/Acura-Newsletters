<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Reference.ApplicationName</title>
    @Html.Partial("_FaviconStack")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_TopNavBar")
    <div class="container body-content">
        @if (this.HasMessages()) {
            foreach (var message in this.Messages()) {
                <div class="alert alert-@(message.Category.ToString())" role="alert">@message.Text</div>
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year @Reference.CompanyName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
