<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title - @Reference.ApplicationName</title>
    @Html.Partial("_FaviconStack")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="document-content">
        @Html.Partial("_TopNavBar")

        <div class="body-content">
            <div class="container">
                @if (this.HasMessages()) {
                foreach (var message in this.Messages()) {
                        <div class="alert alert-@(message.Category.ToString())" role="alert">@message.Text</div>
                    }
                }
            </div>

            @RenderBody()
        </div>

        <div class="footer-content">
            <div class="container">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year @Reference.CompanyName</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
