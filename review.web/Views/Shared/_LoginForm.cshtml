@model review.web.Models.LoginModel
@using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { @class = "form-login" })) {
    <div class="form-group">
        <label>
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "user name" })
        </label>
    </div>
    <div class="form-group">
        <label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "password" })
        </label>
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(model => model.RememberMe) Remember Me
        </label>
    </div>
    <div>
        <button type="submit" class="btn btn-default">Log in</button>
    </div>
}