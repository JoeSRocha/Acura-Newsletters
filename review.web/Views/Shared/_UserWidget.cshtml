@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    <ul class="nav navbar-nav navbar-right">
        <li>@("Hello " + User.Identity.GetUserName() + "!")</li>
        <li>@Html.ActionLink("Log out", "LogOut", "Home", routeValues: null, htmlAttributes: null)</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "LogIn", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
