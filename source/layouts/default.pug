//- BASE MODULES
include ./includes.pug

//- IMPORTED VARIABLES FROM CHILD PAGE
block vars

//- CONTENT
doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(name="viewport", content="width=device-width")
		title #{pageTitle}
		include ./stylesheet.pug
		block head
	body(bgcolor=constants.OuterBackgroundColor,style="min-width:100%;padding:0;margin:0;background-color:" + constants.PrimaryBackgroundColor + "-webkit-text-size-adjust:none;")
		if (defaults.preheaderContent)
			+preheader= defaults.preheaderContent
		+table({
			"align": "center",
			"width": "100%",
			"style": { "background-color":constants.OuterBackgroundColor, "margin":"0 auto", "min-width":"100%" }
		})
			+tableBody
				+tableRow
					+tableCell({
						"align": "center"
					})
						+table({
							"class": "message-body-container",
							"align": "center",
							"width": constants.ContentWidth,
							"style": { "background-color":constants.ContentBackgroundColor, "margin":"0 auto", "min-width":constants.ContentWidth }
						})
							+tableBody
								+tableRow
									+tableCell({
										"valign": "top",
										"style" : styles.global
									})
										block content
		//- +GmailLayoutFixer