- tagAttribs.OfferCtaLinkContent.style["font-size"] = "16px"
- tagAttribs.OfferCtaLinkContent.style["font-weight"] = "bold"
- tagAttribs.OfferCtaLinkContent.style["line-height"] = "16px"
