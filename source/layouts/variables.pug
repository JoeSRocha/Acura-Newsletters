- tagAttribs.OfferCtaLinkWrapper.style = Rhythm.ExtendStyle({}, styles.global)
- tagAttribs.OfferCtaLinkWrapper.style["display"] = "block"
- tagAttribs.OfferCtaLinkWrapper.style["text-align"] = "center"
//-
- tagAttribs.OfferCtaLinkContent = {}
- tagAttribs.OfferCtaLinkContent.class = "offer-cta-link-content"
- tagAttribs.OfferCtaLinkContent.style = Rhythm.ExtendStyle({}, styles.global)
- tagAttribs.OfferCtaLinkContent.style["border-color"] = constants.PrimaryBackgroundColor
- tagAttribs.OfferCtaLinkContent.style["border-style"] = "solid"
- tagAttribs.OfferCtaLinkContent.style["border-left-width"] = "16px"
- tagAttribs.OfferCtaLinkContent.style["border-right-width"] = "0"
- tagAttribs.OfferCtaLinkContent.style["border-top-width"] = "9px"
- tagAttribs.OfferCtaLinkContent.style["border-bottom-width"] = "9px"
