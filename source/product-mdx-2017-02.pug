extends ./layouts/default.pug

block vars
	- constants.ImagePath = "product-mdx-2017-02/"
	- pageTitle = "Hurry, Acura MDX Limited Time Offers End February 28th!"
	- defaults.preheaderContent = "Now's your chance to drive home a new Acura MDX for less"

	- var tracking = {}
	- tracking["utm_source"] = "product"
	- tracking["utm_medium"] = "email"
	- tracking["utm_campaign"] = "at7944"
	//- tracking["utm_term"] = "term"
	//- tracking["utm_content"] = "content"

	// Overrside styles
	- tagAttribs.header.style["font-size"] = "40px"
	- tagAttribs.header.style["line-height"] = "48px"

	//- tagAttribs.bodyCopy.style["font-size"] = "24px"
	//- tagAttribs.bodyCopy.style["line-height"] = "40px"

	- var urls = {}

	- urls.Explore_Tlx_Header = Rhythm.BuildUrl({ url: "http://www.acura.com/MDX", query: [ tracking, { "utm_content":"email-header" } ] })
	- urls.Explore_Tlx_Graphic = Rhythm.BuildUrl({ url: "http://www.acura.com/MDX", query: [ tracking, { "utm_content":"main-image" } ] })
	- urls.Explore_Tlx_CTA = Rhythm.BuildUrl({ url: " http://www.acura.com/MDX", query: [ tracking, { "utm_content":"explore-md" } ] })

	- urls.Tlx_Offers = Rhythm.BuildUrl({ url: "http://www.acura.com/tools/shopping/CurrentOffers.aspx", query: [ { model: "MDX" }, tracking, { "utm_content":"mdx-current-offers" } ] })
	- urls.Build_Tlx = Rhythm.BuildUrl({ url: "http://www.acura.com/build-price/mdx", query: [ tracking, { "utm_content":"mdx-build-price" } ] })

	- urls.See_Tlx_Gt_Package_Graphic = Rhythm.BuildUrl({ url: "http://www.acura.com/mdx/packages", query: [ tracking, { "utm_content":"image-mdx-gt" } ], fragment: "multi-feature-box-gt" })
	- urls.See_Tlx_Gt_Package_CTA = Rhythm.BuildUrl({ url: "http://www.acura.com/mdx/packages", query: [ tracking, { "utm_content":"mdx-package-page" } ], fragment: "multi-feature-box-gt" })
	- urls.Tlx_Gt_Package_Video = Rhythm.BuildUrl({ url: "https://www.youtube.com/watch", query: [ { "v":"8nLd6C5O1HM" }, tracking, { "utm_content":"mdx-accessory-video" } ] })

	- urls.Explore_Acura_Motorsports_Graphic = Rhythm.BuildUrl({ url: "http://fv.acura.com/Motorsports", query: [ tracking, { "utm_content":"image-born-to-run" } ] });
	- urls.Explore_Acura_Motorsports_CTA = Rhythm.BuildUrl({ url: "http://fv.acura.com/Motorsports", query: [ tracking, { "utm_content":"acura-motorsports" } ] });

	- urls.Watch_Jalopnik_Video_Graphic = Rhythm.BuildUrl({ url: "https://www.youtube.com/watch", query: [ { "v":"EcNtE6B5Yvs" }, tracking, { "utm_content":"eversley-jalopnik-video-mdx" } ] });
	- urls.Watch_Jalopnik_Video_CTA = Rhythm.BuildUrl({ url: "https://www.youtube.com/watch", query: [ { "v":"EcNtE6B5Yvs" }, tracking, { "utm_content":"image-jalopnik" } ] });

block head

block content

	+GraphicCTA(urls.Explore_Tlx_Header, {}, {
		relativeSrc: "header-mdx-white.png",
		alt: "ACURA | MDX",
		width: 600,
		height: 85,
		style: { "background-color":"#ffffff", "line-height":"85px" }
	})

	+GraphicCTA(urls.Explore_Tlx_Graphic, {}, {
		relativeSrc: "mdx-hero.jpg",
		alt: "",
		width: 600,
		height: 340,
		style: { "line-height":"340px" }
	})

	+ContentContainer
		+spacer(tagAttribs.lineSpaceSmall)
		+content(tagAttribs.header)
			| Own The Road For Less

		+spacer(tagAttribs.lineSpaceExtraSmall)
		+spacer(tagAttribs.lineSpaceExtraSmall)

		+content(tagAttribs.bodyCopy)
			| With extraordinary finance and lease offers currently available on the all-wheel drive MDX, now&rsquo;s the perfect time to own the road for less. But you&rsquo;d better step on it &mdash; the savings end on February 28th!

		+spacer(tagAttribs.lineSpaceMedium)
		+content({ align: "center" })
			+AcuraButton(urls.Explore_Tlx_CTA, { class: "mobile-wide", style: { "padding":"16px 50px" } }, {})
				| EXPLORE MDX

	+ContentContainer({}, {}, tagAttribs.ContentContainerSpacerWide)
		+columns

			+column({ width: 260 })
				+OfferCTA
					+OfferCTA_Header(urls.Tlx_Offers)
						| Featured APR Offer#[+sup(24) 1]
					+spacer({ height: 20 })
					+OfferCTA_Subheader(urls.Tlx_Offers)
						| 2017 MDX Special APR#[br]&nbsp;
					+spacer({ height: 12 })
					+OfferCTA_Stinger(urls.Tlx_Offers, { bigText: "1.9%" })
						| APR#[br]for 36 months
					+spacer({ height: 12 })
					+OfferCTA_Details(urls.Tlx_Offers)
						| For well-qualified buyers and buyers that qualify#[br]for the Acura Graduate Program criteria.#[br]#[+strong Offer ends February 28, 2017]
						| #[br]&nbsp;
						| #[br]&nbsp;

			+columnSpacer({ width: 14, height: 265 }, { width: 14, height: 265 })
			+columnRule({ width: 1, height: 265, bgcolor: constants.DividerGray }, { width: 1, height: 265, color: constants.DividerGray })
			+columnSpacer({ width: 15, height: 265 }, { width: 15, height: 265 })

			+column({ width: 260 })
				+OfferCTA
					+OfferCTA_Header(urls.Tlx_Offers)
						| Featured Lease Offer#[+sup(24) 2]
					+spacer({ height: 20 })
					+OfferCTA_Subheader(urls.Tlx_Offers)
						| 2017 MDX 9 Speed Automatic Featured Special Lease
					+spacer({ height: 12 })
					+OfferCTA_Stinger(urls.Tlx_Offers, { bigText: "$439" })
						| per month for 36 months#[br]$2,999 total due at signing
					+spacer({ height: 12 })
					+OfferCTA_Details(urls.Tlx_Offers)
						| Includes down payment with no security deposit.#[br]Excludes taxes, titles and either dealer fees#[br]or documentary service fee.#[br]For well-qualified lessees.#[br]#[+strong Offer ends February 28, 2017]

	+spacer(tagAttribs.lineSpaceMedium)

	+ContentContainer({}, {}, tagAttribs.ContentContainerSpacerWide)
		+columns
			+column({ width: 274 })
				+OfferCTA
					+OfferCTA_Link(urls.Tlx_Offers, { "class": "mobile-small-text", "width":"auto" })
						| SEE MDX OFFERS

			+column({ width: 276, align:left })
				+OfferCTA
					+OfferCTA_Link(urls.Build_Tlx, { "class": "mobile-small-text", "width":"auto", "align":"left" })
						| BUILD &amp; PRICE YOUR MDX

	+spacer(tagAttribs.lineSpaceMedium)

	+GraphicCTA(urls.See_Tlx_Gt_Package_Graphic, {}, {
		relativeSrc: "mdx-hero-three-quarters-turned.jpg",
		alt: "",
		width: 600,
		height: 279,
		style: { "line-height":"312px" }
	})

	+Footer
		+content(tagAttribs.FooterSmallPrint)
			| #[+FooterBoldText 1)] Special APR offer valid on new and unregistered 2017 MDX Models from #[+FooterBoldText January 4, 2017 through February 28, 2017,] to well qualified buyers on approved credit by Acura Financial Services through participating dealers. Must take new retail delivery on vehicle from dealer stock by #[+FooterBoldText February 28, 2017.] Not all buyers may qualify. Higher rates apply for buyers with lower credit ratings. Example for 2017 MDX: 1.9% for 36 months financing at $28.60 a month for every $1,000.00 financed. Dealers set actual prices. See your Acura dealer for details.
		+spacer(tagAttribs.lineSpaceFooter)
		+content(tagAttribs.FooterSmallPrint)
			| #[+FooterBoldText 2)] Closed-end lease for 2017 MDX 9 Speed Automatic vehicles (YD3H3HJNW) available from #[+FooterBoldText January 4, 2017 through February 28,] 2017, available to well-qualified lessees approved by Acura Financial Services. Not all lessees will qualify. Higher lease rates apply for lessees with lower credit ratings. MSRP $45,025.00 (includes destination, excludes tax, license, title fee, registration, documentation fee, options, insurance and the like). Actual net capitalized cost $41,206.20. Net capitalized cost includes $595 acquisition fee. Dealer contribution may vary and could affect actual lease payment. Total monthly payments $15,804.00. Option to purchase at lease end $27,915.50.
		+spacer(tagAttribs.lineSpaceFooter)
		+content(tagAttribs.FooterSmallPrint)
			| Must take new retail delivery on vehicle from dealer stock by #[+FooterBoldText February 28, 2017.] Lessee responsible for maintenance, excessive wear/tear and 15&cent;/mile over 10,000 miles/year for vehicles with MSRP less than $30,000, and 20&cent;/mile over 10,000 miles/year for vehicles with MSRP of $30,000 or more. See your Acura dealer for complete details.









