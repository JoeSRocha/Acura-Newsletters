include ./tables.pug
include ./spacer.pug
mixin bulletedContent(bulletProps, contentProps)
	- bulletProps = Rhythm.ExtendAttributes({}, defaults.bullet, bulletProps)
	- contentProps = Rhythm.ExtendAttributes({}, defaults.bulletedContent, contentProps)
	+tableRow
		if thisSpaceBeforeBullet
			+tableCell
				+spacer({ width: bulletPaddingLeft })
		+tableCell
			span(style= props.bulletStyle ? props.bulletStyle : "")= props.bulletCharacter ? props.bulletCharacter : "&bull;"
		if thisSpaceAfterBullet
			+tableCell
				+spacer({ width: bulletPaddingRight })
		+tableCell(props)
			block